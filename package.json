{
  "name": "@atomist/goal",
  "version": "0.1.0",
  "description": "Package to implement Atomist SDM goals in TypeScript/JavaScript",
  "author": {
    "name": "Atomist",
    "email": "support@atomist.com",
    "url": "https://atomist.com/"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/atomist/goal#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/atomist/goal.git"
  },
  "bugs": {
    "url": "https://github.com/atomist/goal/issues"
  },
  "keywords": [
    "atomist",
    "automation",
    "sdm"
  ],
  "main": "./index.js",
  "types": "./index.d.ts",
  "dependencies": {
    "@atomist/automation-client": "1.8.0-master.20191107225525",
    "@atomist/cli": "^1.8.0",
    "@atomist/sdm": "1.8.0-dynamic-goals.20191108140247",
    "@atomist/sdm-core": "1.8.0-dynamic-goals.20191108152504",
    "app-root-path": "^3.0.0",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "lodash": "^4.17.15",
    "source-map-support": "^0.5.16",
    "yargs": "^14.2.0"
  },
  "devDependencies": {
    "@atomist/sdm-local": "1.2.2-master.20191011215150",
    "@types/mocha": "^5.2.7",
    "@types/power-assert": "^1.5.0",
    "espower-typescript": "^9.0.2",
    "mocha": "^6.2.2",
    "npm-run-all": "^4.1.5",
    "power-assert": "^1.6.1",
    "rimraf": "^3.0.0",
    "supervisor": "^0.12.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.1",
    "typedoc": "^0.15.0",
    "typescript": "^3.7.2"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "autotest": "supervisor --watch index.ts,lib,test --extensions ts --no-restart-on exit --quiet --exec npm -- test",
    "build": "run-s compile test lint doc",
    "clean": "run-p clean:compile clean:test clean:doc clean:run",
    "clean:compile": "rimraf git-info.json \"index.{d.ts,js}{,.map}\" \"{lib,test}/**/*.{d.ts,js}{,.map}\" lib/typings/types.ts",
    "clean:dist": "run-s clean clean:npm",
    "clean:doc": "rimraf doc",
    "clean:npm": "rimraf node_modules",
    "clean:run": "rimraf *-v8.log profile.txt log",
    "clean:test": "rimraf .nyc_output coverage",
    "compile": "run-s git:info gql:gen compile:ts",
    "compile:ts": "tsc --project .",
    "doc": "typedoc --mode modules --excludeExternals --ignoreCompilerErrors --exclude \"**/*.d.ts\" --out doc index.ts lib",
    "git:info": "atm-git-info",
    "gql:gen": "atm-gql-gen",
    "lint": "tslint --config tslint.json --format verbose --project .",
    "lint:fix": "npm run lint -- --fix",
    "start": "atm-start",
    "test": "mocha --require espower-typescript/guess \"test/**/*.test.ts\"",
    "test:one": "mocha --require espower-typescript/guess \"test/**/${TEST:-*.test.ts}\"",
    "typedoc": "npm run doc"
  },
  "engines": {
    "node": ">=8.2.0",
    "npm": ">=5.0.0"
  }
}
